{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Win client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/windows/CoD2MP_s.exe",
            "args": ["${config:CoD2x.launch_args_win_client}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin/windows",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "${workspaceFolder}/tools/mingw/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build MSS32",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Win client+server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/windows/CoD2MP_s.exe",
            "args": ["${config:CoD2x.launch_args_win_server}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin/windows",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "${workspaceFolder}/tools/mingw/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build MSS32",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Linux server",
            "type": "cppdbg",
            "request": "launch",
            "program": "~/CoD2x/cod2_lnxded",
            "miDebuggerPath": "/usr/bin/gdb",
            "cwd": "~/CoD2x/",
            "setupCommands": [
                {
                    "description": "Connect to gdbserver",
                    "text": "target remote localhost:1234",
                    "ignoreFailures": false
                },
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "pipeTransport": {
                "pipeProgram": "wsl.exe",
                "pipeArgs": ["bash", "-c"],
                "debuggerPath": "/usr/bin/gdb"
            },
            "sourceFileMap": {
                "/mnt/c/": "C:\\",
                "/mnt/d/": "D:\\",
                "/mnt/t/": "T:\\",
                "/mnt/e/": "E:\\"
            },
            "targetArchitecture": "x86",
            "preLaunchTask": "WSL Linux"
        }
    ]
}